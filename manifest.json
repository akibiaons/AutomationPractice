{
  "manifest_version": 3,
  "name": "Atria Wealth",
  "description": "Atria Wealth",
  "version": "1.0",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "web_accessible_resources": [
    { "resources": ["inject.js"], "matches": ["<all_urls>"] }
  ]
}
